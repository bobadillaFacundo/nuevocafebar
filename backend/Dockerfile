FROM node:21
WORKDIR /usr

COPY package.json ./

RUN npm install --production

COPY . .

ENV DATABASE_HOST=localhost
ENV DATABASE_PORT=5432
ENV DATABASE_USER=bar
ENV DATABASE_PASSWORD=1234
ENV DATABASE_DB=coloncafebarr
ENV PORT=3000
ENV JWT_SECRET=SECRETO
ARG SHA=null
ENV COMMIT_SHA=$SHA
ARG JOB_NUMBER
ENV JOB_NUMBER=$JOB_NUMBER
CMD ["node", "index.js"]